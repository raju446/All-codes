            }
            .myCustomMessage h4{
                display:none !important;
            }
            @media only screen and (max-width: 1024px) {
              body {
                    overflow:scroll;
                }  
            }
            @media only screen and (max-width: 800px) {
                body {
                    overflow:scroll;
                }
                .uname {
                    padding-right: 51% !important;
