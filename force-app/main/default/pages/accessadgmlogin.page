                background-image: url("{!URLFOR($Resource.LoginBg, '/LoginBg/BG_Login.png')}");
            
                /* Full height */
                height: 100%; 
            
                /* Center and scale the image nicely */
                background-position: center;
                background-repeat: no-repeat;
                background-size: cover;
