            }
            @media only screen and (max-width: 600px) {
                .main-login-box .login-block {
                    padding-left: 5%;
                    padding-right: 5%;
                    margin: auto;
                    width: 80%;
                }
            }
            #loading {
                width: 100%;
                height: 100%;
                top: 0;
                left: 0;
                position: fixed;
                display: block;
                opacity: 0.7;
                background-color: #fff;
                z-index: 99;
                text-align: center;
            }
            
            #loading-image {
                position: absolute;
                top: 100px;
                left: 240px;
