            /* Dimensions */
            width: 100%;
            height: 100%;
            top: 0;
            left: 0;
            z-index: 1051;
            position: fixed;
        }
        
        .overlay {
            /* Background color */
            background-color: black;
            opacity: 0.2;
            /* Generic for Major browsers */
            -ms-filter: "progid:DXImageTransform.Microsoft.Alpha(Opacity=20)"; 
            /* IE 5-7 */
            filter: alpha(opacity = 20);
            /* Netscape */
            -moz-opacity: 0.6;
            /* Safari 1.x */
            -khtml-opacity: 0.6;
            /* Dimensions */
            width: 100%;
            height: 100%;
            top: 0;
            left: 0;
            z-index: 1051;
            position: fixed;
        }
  
        /* This is for the message DIV */
        .PopupPanel {
            /* Background color */
            /* border: solid 2px #00205B;
               background-color: white; */
            /* Dimensions */
            left: 45%;
            width: 100px; //
            margin-left: -100px;
            top: 50%;
            height: 100px;
            z-index: 999;
            position: fixed;
        }
    
        /* This is for the message DIV */
        .contentDiv {
            position: absolute;
            z-index: 100;
            width: 50%;
            background-color: white;
            border: 1px solid #01426A;
            border-radius: 5px;
            margin-left: 12%;
        }
        
        .data2Col{
        	border-bottom: 2px solid #ececec !important;
        }
    </style>
    <script type="text/javascript">
    	function resetTextArea(){
    		var rtId = document.getElementsByClassName('cke_1')[0].id;
    		if(rtId.indexOf('cke_') >= 0){
    			var subrtId = rtId.substring('cke_'.length, rtId.length);
    			CKEDITOR.instances[subrtId].setData('');
    		}
    	}
    	window.onload = function setFocus(){
            document.getElementById("hiddenElementId").focus();
        }
	</script>
